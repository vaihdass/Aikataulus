<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/srl_tasks"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.screen.tasks.TasksFragment">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.core.widget.NestedScrollView
    android:id="@+id/nsv_tasks"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintVertical_bias="0"
    android:fillViewport="true"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_title"
    app:layout_constraintBottom_toTopOf="@id/layout_btn_clear_tasks"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="64dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/fragment_layout_tasks"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_tasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginHorizontal="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:textSize="24sp"
        android:letterSpacing="0.06"
        android:textAlignment="center"
        android:fontFamily="@font/roboto_mono_regular"
        android:textColor="?attr/colorPrimary"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/tasks_title"
        />

    <LinearLayout
        android:id="@+id/layout_btn_clear_tasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="?attr/backgroundColor">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_remove_done_tasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            style="@style/AikataulusButton.SquaredUnelevated"
            android:backgroundTint="@color/colorTasksButton"
            android:layout_marginHorizontal="9dp"
            android:layout_marginVertical="3dp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp"
            android:letterSpacing="0.12"
            android:textSize="17sp"
            android:fontFamily="@font/roboto_slab_regular"
            android:textColor="?attr/backgroundColor"
            android:text="@string/btn_remove_done_tasks"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>