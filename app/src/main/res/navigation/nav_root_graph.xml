<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_root_graph"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/greetingFragment"
        android:name="ru.vaihdass.aikataulus.presentation.screen.greeting.GreetingFragment"
        android:label="fragment_greeting"
        tools:layout="@layout/fragment_greeting" />
    <fragment
        android:id="@+id/authFragment"
        android:name="ru.vaihdass.aikataulus.presentation.screen.auth.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth" >
        <action
            android:id="@+id/action_authFragment_to_greetingFragment"
            app:destination="@id/greetingFragment" />
        <action
            android:id="@+id/action_authFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="ru.vaihdass.aikataulus.presentation.screen.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" />
</navigation>